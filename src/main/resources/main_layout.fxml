<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<HBox xmlns:fx="http://javafx.com/fxml" spacing="10" fx:controller="Controller.RealMainController">

    <VBox fx:id="leftPaneContainer" style="-fx-background-color: #100317;" prefWidth="250">
        <ScrollPane fx:id="leftPaneScroll" fitToWidth="true">
            <VBox fx:id="leftPane" style="-fx-background-color: #100317; -fx-text-fill: white;"/>
        </ScrollPane>
    </VBox>

    <VBox fx:id="middlePane" style="-fx-background-color: #100317; -fx-text-fill: white;" prefWidth="1385">
        <!-- The TreeView will be added programmatically -->
        <!-- Optionally, add a TextField for search -->
        <!--<TextField fx:id="searchField" promptText="Search..." />-->
    </VBox>

    <VBox fx:id="rightPane" style="-fx-background-color: #100317;" prefWidth="250">
        <TextField fx:id="collectionFileField" promptText="Enter Collection file path"/>
        <Button fx:id="collectionFileLoadButton" text="Load Collection"/>
    </VBox>

</HBox>
